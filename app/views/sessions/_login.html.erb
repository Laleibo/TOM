<div class="index_exit" id="log_in_exit">X</div>
<h1> Log In </h1>

<div id="log_in_field">
	
	<%= form_tag '/login' do %>
	 	<span class="username_in">
			<%= label_tag :email %>
			<%= text_field_tag :email %>
		</span>
		<span class="password_in">
			<%= label_tag :password %>
			<%= password_field_tag :password %>
		</span>
	<%= submit_tag 'log in'%>
	<% end %>

</div>